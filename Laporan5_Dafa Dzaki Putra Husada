Tugas 1
#Buatlah program untuk menampilkan pernyataan berikut:
# 1 10 2 9 3 8 4 7 5 6 6 5 7 4 8 3 9 2 10 1
for bilangan in range(1, 11):
    print(bilangan, 11 - bilangan, end=' ')

Tugas 2
awal = int(input("Masukkan saldo awal\t:"))
sisa = awal #bila tidak ada pengeluaran
while (True):
 pengeluaran = int(input("Masukan pengeluaran hari ini (-1 untuk keluar): "))
 if pengeluaran ==-1: #untuk berhenti""
        print("Sisa saldo = ", sisa) #sisa bila di berhentikan
        break
 sisa = sisa - pengeluaran
 if sisa <0:
        print("Saldo tidak cukup")
        print("Sisa saldo ", sisa+pengeluaran)
        break

Tugas 3
for i in range (1,11):
    print (f'7x{i}={7*i}')

Tugas 4
x = int(input("Masukkan jumlah data: "))
y = 0
for i in range(x):
    angka = float(input(f"Masukkan angka ke-{i+1}: "))
    y += angka
rata_rata = y / x
print(f"Rata-rata dari {x} data yang dimasukkan adalah: {rata_rata}")

Tugas 5
#Deklarasi variabel
var_nilai = 0
var_i = 1
#Perulangan FOR
for var_nilai in range (0,10) :
 print("Perulangan pertama Ke ",var_nilai)
 for var_i in range (1,3) :
    print(" Perulangan ke ", var_nilai,", ",var_i)
 #diluar perulangan var_i
 var_i = 1
#diluar_perulangan var_nilai
print("var_nilai = ",int(var_nilai)+1," = 10. Bernilai False") 

Tugas 6
#Deklarasi variabel
var_nilai = 0
var_i = 1
#Perulangan WHILE
while (var_nilai < 10) :
    print("Perulangan pertama Ke ",var_nilai)
    while(var_i < 3) :
        print(" Perulangan ke ", var_nilai,", ",var_i)
        var_i +=1
 #diluar perulangan var_i
    var_i = 1
    var_nilai +=1
#diluar_perulangan var_nilai
print("var_nilai = ",int(var_nilai)," = 10. Bernilai False") 

Tugas 7 
#Deklarasi variabel
var_nilai = 0
var_i = 1
#Perulangan FOR
for var_nilai in range (0,10) :
    print("Perulangan pertama Ke ",var_nilai)
    while(var_i < 3) :
        print(" Perulangan ke ", var_nilai,", ",var_i)
        var_i +=1
 #diluar perulangan var_i
    var_i = 1
#diluar_perulangan var_nilai
print("var_nilai = ",int(var_nilai)+1," = 10. Bernilai False") 
















